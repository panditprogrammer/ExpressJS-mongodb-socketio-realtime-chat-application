<script>
  $(document).ready(function () {


    $("#profileBtn").click(function () {
      $("#profileMenu").toggleClass("hidden");
    })

    // --- 1. Post Creation Modal Logic ---
    $('#create-post-widget input').on('click', function () {
      $('#post-creation-modal').removeClass('hidden');
      setTimeout(() => {
        $('#modal-content').removeClass('scale-95 opacity-0').addClass('scale-100 opacity-100');
      }, 10);
    });
    
    $('#close-post-modal').on('click', function () {
      $('#modal-content').removeClass('scale-100 opacity-100').addClass('scale-95 opacity-0');
      setTimeout(() => {
        $('#post-creation-modal').addClass('hidden');
      }, 300);
    });


    // --- 2. Video Auto-Play/Stop on Scroll ---
    const checkVideoVisibility = () => {
      $('.post-video').each(function () {
        const video = this;
        const $videoContainer = $(video).closest('.post-media-container');
        const rect = $videoContainer[0].getBoundingClientRect();
        const viewportHeight = $(window).height();
        const visibleHeight = Math.max(0, Math.min(rect.bottom, viewportHeight) - Math.max(rect.top, 0));
        const isVisible = (visibleHeight / rect.height) >= 0.6;

        if (isVisible) {
          if (video.paused) {
            video.play().catch(e => { });
          }
        } else {
          if (!video.paused) {
            video.pause();
          }
        }
      });
    };
    let scrollTimer = -1;
    $(window).on('scroll resize load', function () {
      if (scrollTimer !== -1) {
        clearTimeout(scrollTimer);
      }
      scrollTimer = window.setTimeout(checkVideoVisibility, 150);
    });

    // custom post upload 
    ajaxFileUpload('/api/v1/utilities/upload/post-image-video', "#uploadPostImageVideo", "imageVideo", false)


  });
</script>


