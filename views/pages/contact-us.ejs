<%- include('../layouts/header') %>

  <!-- We'll use a light gray background for the whole page and a modern sans-serif font -->
  <div class="bg-gray-100 font-sans antialiased">
    <section class="container mx-auto py-12 md:py-20 px-4 md:px-6">

      <!-- Page Title -->
      <div class="max-w-5xl mx-auto mb-12 md:mb-16 text-center">
        <h1 class="text-3xl md:text-5xl font-bold pb-2 text-gray-900">
          Contact Us
        </h1>
        <p class="text-lg text-gray-600 mt-2">
          We'd love to hear from you. Reach out with any questions or to get started.
        </p>
      </div>

      <!-- Main content grid: Splits 1/2 and 1/2 on medium screens and up -->
      <div class="grid md:grid-cols-2 gap-10 md:gap-16 max-w-6xl mx-auto">

        <!-- Column 1: Contact Info & Map -->
        <div class="space-y-10">

          <!-- Contact Details Section -->
          <div>
            <h2 class="text-2xl font-semibold text-gray-800 mb-5">Get in Touch</h2>
            <div class="space-y-5">

              <!-- Address -->
              <div class="flex items-start space-x-4 mb-2">
                <!-- Heroicon: MapPin -->
                <svg class="w-6 h-6 text-orange-500 flex-shrink-0 mt-1" xmlns="http://www.w3.org/2000/svg" fill="none"
                  viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
                <div>
                  <h3 class="font-semibold text-gray-700">Address</h3>
                  <p class="text-gray-600">
                    <a href="https://www.google.com/maps/dir/?api=1&destination=9.855538400000002,76.8112435">1st Floor Pulimoottil Arcade, Muvattupuzha Road, Thodupuzha, Idukki - 685584
(Opposite Adam Star Complex, Near Bhima Jewelry)</a>
                  </p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start space-x-4 mb-2">
                <!-- Heroicon: Phone -->
                <svg class="w-6 h-6 text-orange-500 flex-shrink-0 mt-1" xmlns="http://www.w3.org/2000/svg" fill="none"
                  viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.217-.99-.58-1.35l-3.952-3.952a2.25 2.25 0 00-3.182 0l-1.172 1.172a2.25 2.25 0 01-3.182 0l-3.952-3.952a2.25 2.25 0 010-3.182l1.172-1.172a2.25 2.25 0 000-3.182L6.44.58A2.25 2.25 0 006.028 0H4.5A2.25 2.25 0 002.25 2.25v4.5z" />
                </svg>
                <div>
                  <h3 class="font-semibold text-gray-700">Phone</h3>
                  <p class="text-gray-600"> <a href="tel:+918848652609">+91 8848652609</a> </p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start space-x-4 mb-2">
                <!-- Heroicon: Envelope -->
                <svg class="w-6 h-6 text-orange-500 flex-shrink-0 mt-1" xmlns="http://www.w3.org/2000/svg" fill="none"
                  viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
                <div>
                  <h3 class="font-semibold text-gray-700">Email</h3>
                  <p class="text-gray-600"><a href="mailto:customercare@bizmapia.com">customercare@bizmapia.com</a></p>
                </div>
              </div>

              <!-- Hours -->
              <div class="flex items-start space-x-4 mb-2">
                <!-- Heroicon: Clock -->
                <svg class="w-6 h-6 text-orange-500 flex-shrink-0 mt-1" xmlns="http://www.w3.org/2000/svg" fill="none"
                  viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <h3 class="font-semibold text-gray-700">Business Hours</h3>
                  <p class="text-gray-600">Monday - Saturday: 9:00 AM - 5:00 PM</p>
                  <p class="text-gray-600">Sunday: Closed</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Map Section -->
          <div>
            <h2 class="text-2xl font-semibold text-gray-800 mb-5">Our Location</h2>
            <!-- 
            IMPORTANT: Replace this src with your own Google Maps embed code.
            1. Go to Google Maps
            2. Search for your address
            3. Click "Share"
            4. Click "Embed a map"
            5. Copy the HTML and paste the src="" content below
          -->
            <div class="aspect-video rounded-lg overflow-hidden shadow-md border border-gray-200">
             <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d44474.30893872769!2d76.79165086583242!3d9.84946933522812!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3b07b981c214f513%3A0xb1f62d0d4096a83b!2sKuruvakkayam%20Waterfall!5e0!3m2!1sen!2sin!4v1761465973987!5m2!1sen!2sin" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          </div>

        </div>

        <!-- Column 2: Contact Form -->
        <!-- The form is placed in a styled white card -->
        <div class="bg-white p-6 md:p-8 rounded-lg shadow-lg">
          <h2 class="text-2xl font-semibold text-gray-800 mb-6">Send Us a Message</h2>

          <!-- Your original form starts here. I've only added modern Tailwind focus styles. -->
          <form id="contactForm" class="space-y-5">
            <div class="mb-4">
              <label for="fullName" class="mb-2 block text-gray-700">Your fullName</label>
              <input type="text" id="fullName" name="fullName"
                class="w-full p-3 outline-none border border-gray-300 rounded-md" placeholder="Your full name" required>
            </div>

            <div class="mb-4">
              <label for="emailOrPhone" class="mb-2 block text-gray-700">Email/Phone Number</label>
              <input type="text" id="emailOrPhone" name="emailOrPhone"
                class="w-full p-3 outline-none border border-gray-300 rounded-md" placeholder="Email or phone number"
                required>
            </div>

            <div class="mb-4">
              <label for="message" class="mb-2 block text-gray-700">Message</label>
              <textarea id="message" name="message" class="w-full p-3 outline-none border border-gray-300 rounded-md"
                rows="4" placeholder="Describe here" required></textarea>
            </div>

            <!-- Hidden input for reCAPTCHA token (unchanged) -->
            <input type="hidden" id="token" name="token">

            <button type="submit" class="w-full py-3 bg-orange-500 text-white rounded-md hover:bg-orange-600">
              Send Message
            </button>
          </form>
          <!-- Your original form ends here -->

        </div>

      </div>
    </section>
  </div>

  <%- include('../layouts/footer') %>

    <!-- Load reCAPTCHA v3 (unchanged) -->
    <script src="https://www.google.com/recaptcha/api.js?render=<%= CAPTCHA_SITE_KEY %>"></script>

    <!-- Form submission logic (unchanged) -->
    <script>
      $(document).ready(function () {
        $("#contactForm").submit(function (e) {
          e.preventDefault();

          grecaptcha.ready(function () {
            grecaptcha.execute('<%= CAPTCHA_SITE_KEY %>', { action: 'submit' }).then(function (token) {
              $("#token").val(token); // store token

              const formData = {
                fullName: $("input[name=fullName]").val(),
                emailOrPhone: $("input[name=emailOrPhone]").val(),
                message: $("textarea[name=message]").val(),
                recaptchaToken: token, // include reCAPTCHA token in payload
              };

              // Your existing ajaxRequest function
              ajaxRequest('/api/v1/contact-us', formData, "POST");
            });
          });
        });
      });
    </script>